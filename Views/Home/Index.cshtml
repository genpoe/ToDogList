@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">To-Dog List</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <p>Welcome! Please click <a href="/app">here</a> to see your to-do list.</p>
    }
    else
    {
        <p>Please <a href="/Identity/Account/Register">create an account</a> or <a href="/Identity/Account/Login">log in</a> to continue.</p>
    }

</div>
