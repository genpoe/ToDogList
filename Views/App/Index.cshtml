@using Microsoft.AspNetCore.Identity;
@using ToDogList.Areas.Identity.Data;
@inject SignInManager<ToDogListUser> SignInManager;
@inject UserManager<ToDogListUser> UserManager;
@using ToDogList.Models;
@model List<ToDoItem>;

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="display-4">To-Dog List</h1>
<div class="row">
    <div class="col-md-6">
        <p>This is where the to-do list and all that stuff will go!</p>
        <a href="app/add" class="btn btn-primary">Add</a>
        <a href="app/delete" class="btn btn-danger">Delete</a>

        @if (Model.Count == 0)
        {
            <p>No tasks!</p>
        }
    <ul>
        @foreach (ToDoItem toDo in Model)
        {
            if (toDo.UserId == UserManager.GetUserAsync(User).Result.Id)
            {
                <li>@toDo.Name</li>
            }
        }
    </ul>
    </div>
    <div class="col-md-6">
        <p>This is where changing dog pictures will go!</p>
        <img src="https://images.dog.ceo/breeds/pembroke/n02113023_4611.jpg" />
    </div>

</div>
