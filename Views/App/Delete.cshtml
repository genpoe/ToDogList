@using ToDogList.Models;

@model List<ToDoItem>

<h1>Delete Tasks</h1>

@if (Model.Count == 0)
{
    <p>Your list is empty!</p>
    <a asp-controller="App" asp-action="Index" class="btn btn-primary">Cancel</a>
}
@if (Model.Count > 0)
{
    <form method="post">
    @foreach (ToDoItem item in Model)
    {
        <div class="form-check">
            <input type="checkbox" name="itemIds" value="@item.Id" class="form-check-input" />
            <label class="form-check-label" for="itemIds">@item.Name</label>
        </div>
    }
        <input type="submit" value="Delete Selected Items" class="btn btn-danger" />
    </form>

}